<div id="wrapper">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {name: 'login-form', class: 'login-form'}) do |f| %>



      <div class="header">
        <h1>Registration Form</h1>
        <%= devise_error_messages! %>
        <span>Please fill this text fields</span>
      </div>

      <div class="content">

        <%= f.text_field :name, :autofocus => true, class: 'input name', placeholder: 'Name'%>
        <%= f.text_field :email, class: 'input email', placeholder: 'Email' %>
        <%= f.password_field :password, class: 'input', placeholder: 'Password'%>
        <%= f.password_field :password_confirmation, class: 'input', placeholder: 'Password Confirm'%>

      </div>
        <div class="footer">
          <div><%= f.submit 'Sign up', class: 'button' %></div>
          <%= link_to new_user_session_path do %>
              <input type="button" value="Back" class="register" />
          <% end %>

        </div>


  <% end %>


  <div class="gradient"></div>

</div>