<div id="wrapper">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {name: 'login-form', class: 'login-form'}) do |f| %>

      <div class="header">
        <h1>Login Form</h1>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <span>Welcome to Englists, please sign in.</span>
      </div>

      <div class="content">

        <%= f.email_field :email, :autofocus => true, class: 'input email', placeholder: 'Email'%>
        <%= f.password_field :password, class: 'input password', placeholder: 'Password'%>

        <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        <% end -%>
      </div>

      <div class="footer">
        <div><%= f.submit 'Sign in', class: 'button' %></div>
        <%= link_to new_user_registration_path do %>
            <input type="button" value="Register" class="register" />
        <% end %>

      </div>


  <% end %>

</div>
<div class="gradient"></div>

